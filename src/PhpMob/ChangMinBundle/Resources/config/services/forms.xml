<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service class="PhpMob\ChangMinBundle\Form\Extension\ConvertRawDataFormExtension">
            <tag name="form.type_extension" extended-type="Symfony\Component\Form\Extension\Core\Type\FormType" />
        </service>

        <service id="changmin.form.admin_user" class="PhpMob\ChangMinBundle\Form\Type\AdminUserType">
            <argument>%sylius.model.admin_user.class%</argument>
            <argument type="collection">
                <argument>changmin</argument>
            </argument>
            <tag name="form.type" />
        </service>

        <service id="changmin.form.admin_user_picture" class="PhpMob\ChangMinBundle\Form\Type\AdminUserPictureType">
            <argument>%changmin.model.admin_user_picture.class%</argument>
            <argument type="collection">
                <argument>changmin</argument>
            </argument>
            <tag name="form.type"/>
        </service>
    </services>
</container>
