<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service class="PhpMob\ChangMinBundle\Doctrine\ORM\TaxonRepository" decorates="sylius.repository.taxon">
            <argument type="service" id="sylius.manager.taxon"/>
            <argument>%sylius.model.taxon.class%</argument>
        </service>

        <service class="PhpMob\ChangMinBundle\Form\Type\TaxonChoiceType">
            <argument type="service" id="sylius.repository.taxon"/>
            <tag name="form.type"/>
        </service>
    </services>
</container>
