{% set path = options.link.url|default(path(options.link.route|default(grid.requestConfiguration.getRouteName('delete')), options.link.parameters|default({'id': data.id}))) %}

<form action="{{ path }}" method="post" class="delete negative">
    <input type="hidden" name="_method" value="DELETE">
    <button class="btn btn-outline-danger" type="submit" data-delete-confirmation data-message="{{ 'Do you want to delete this item?' }}">
        <i class="{{ action.icon|default('fa fa-trash') }}"></i> <span>{{ (action.label|trans)|default('Delete') }}</span>
    </button>
    <input type="hidden" name="_csrf_token" value="{{ csrf_token(data.id) }}" />
</form>
