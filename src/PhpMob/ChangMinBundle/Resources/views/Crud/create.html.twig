{% extends "@ChangMin/layout.html.twig" %}
{% form_theme form configuration.vars.templates.theme|default('@ChangMin/Form/default.html.twig') %}

{% set title %}
    {% set title = configuration.vars.header|default(metadata.applicationName~'.ui.new_'~metadata.name) %}
    {% set icon = configuration.vars.icon|default('icon icon-plus') %}
    {% if icon|default %}<i class="{{ icon }}"></i> {% endif %}{{ title|trans }}
{% endset %}

{% block title %}{{ title|raw }}{% endblock %}

{% block breadcrumb %}
    {% include configuration.vars.templates.breadcrumb|default('@ChangMin/Crud/_breadcrumbs.html.twig') %}
{% endblock %}

{% block content %}
    {% include configuration.vars.templates.content|default('@ChangMin/Crud/Create/_content.html.twig') %}
{% endblock %}

{% block toolbarHeader %}
    {% include configuration.vars.templates.toolbarHeader|default('@ChangMin/Crud/Create/_toolbarHeader.html.twig') %}
{% endblock %}
