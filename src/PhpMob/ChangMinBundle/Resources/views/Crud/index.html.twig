{% extends "@ChangMin/layout.html.twig" %}

{% set data = resources.data is defined ? resources.data : resources %}
{% set definition = resources.definition is defined ? resources.definition : null %}
{% set pagine = configuration.vars.pagine|default(configuration.vars.pagers|default({ proximity: 10 })) %}

{% set title %}
    {% set title = configuration.vars.header|default(metadata.applicationName~'.ui.'~metadata.pluralName) %}
    {% set icon = configuration.vars.icon|default(null) %}
    {% if icon|default %}<i class="{{ icon }}"></i> {% endif %}{{ title|trans }}
{% endset %}

{% block title %}{{ title|raw }}{% endblock %}

{% block breadcrumb %}
    {% include configuration.vars.templates.breadcrumb|default('@ChangMin/Crud/_breadcrumbs.html.twig') with { isIndex: true } %}
{% endblock %}

{% block toolbarHeader %}
    {% include configuration.vars.templates.toolbarHeader|default('@ChangMin/Crud/Index/_toolbarHeader.html.twig') %}
{% endblock %}

{% block toolbarFooter %}
    {% include configuration.vars.templates.toolbarFooter|default('@ChangMin/Crud/Index/_toolbarFooter.html.twig') %}
{% endblock %}

{% block content %}
    {% include configuration.vars.templates.content|default('@ChangMin/Crud/Index/_content.html.twig') %}
{% endblock %}
