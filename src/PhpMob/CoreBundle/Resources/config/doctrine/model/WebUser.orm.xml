<?xml version="1.0" encoding="UTF-8"?>

<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                                      http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <mapped-superclass name="PhpMob\CoreBundle\Model\WebUser" table="phpmob_web_user">
        <indexes>
            <index columns="username" name="IDX_USERNAME"/>
            <index columns="username_canonical" name="IDX_USERNAME_CANONICAL"/>
            <index columns="email" name="IDX_EMAIL"/>
            <index columns="email_canonical" name="IDX_EMAIL_CANONICAL"/>
        </indexes>

        <field name="displayName" type="string" length="100" nullable="true"/>

        <one-to-one field="picture" target-entity="PhpMob\CoreBundle\Model\WebUserPictureInterface" mapped-by="owner">
            <cascade>
                <cascade-all />
            </cascade>
        </one-to-one>
    </mapped-superclass>

</doctrine-mapping>
