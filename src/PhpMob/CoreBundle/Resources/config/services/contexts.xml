<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="phpmob.context.system_settings" class="PhpMob\CoreBundle\Context\SystemSettingContext" lazy="true">
            <argument type="service" id="phpmob.settings.manager"/>
        </service>

        <service id="phpmob.context.user_settings" class="PhpMob\CoreBundle\Context\SystemSettingContext" lazy="true">
            <argument type="service" id="phpmob.settings.manager"/>
            <argument type="service" id="security.token_storage"/>
        </service>
    </services>
</container>
